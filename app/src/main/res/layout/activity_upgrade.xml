<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp">

        <TextView
            android:text="@string/upgrade"
            style="@style/ChatTextLabel"/>

        <TextView
            android:text="@string/purchase_additional_words"
            style="@style/ChatText"/>

        <TextView
            android:id="@+id/upgrade_link_send_lightning_payment"
            android:text="@string/html_purchase_words"
            style="@style/ChatText"/>

        <Button
            android:id="@+id/upgrade_button_send_ln_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_ln_payment"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15sp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:text="@string/transaction_details"
            style="@style/ChatTextLabel"/>

        <TextView
            android:text="@string/purchase_price"
            style="@style/ChatText"/>

        <TextView
            android:id="@+id/required_description_account_email"
            android:text="@string/purchase_required_info"
            style="@style/ChatText"/>

        <TextView
            android:text="@string/purchase_notice_tips"
            style="@style/ChatText"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15sp"
            android:background="?android:attr/listDivider" />


        <TextView
            android:text="@string/lightning_wallets"
            style="@style/ChatTextLabel"/>

        <TextView
            android:text="@string/get_lightning_wallet"
            style="@style/ChatText"/>

        <TextView
            android:id="@+id/upgrade_link_noncustodial_lightning_wallets"
            android:text="@string/html_lightning_wallet_phoenix"
            style="@style/ChatText"/>

        <TextView
            android:id="@+id/upgrade_link_getalby"
            android:text="@string/html_getalby"
            style="@style/ChatText"/>


    </LinearLayout>

</ScrollView>